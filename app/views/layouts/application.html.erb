<!DOCTYPE html>
<html>
<head>
  <title>TaskManager</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<% if current_user %>
    <nav class="navbar navbar-default navbar-inverse">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="container">
        <div class="navbar-header">
            <%= link_to "TasksManager", projects_path, class: 'navbar-brand' %>
        </div>
        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li><%= link_to "Projects", projects_path %></li>
            <li><%= link_to "Moderators", moderators_path %></li>
            </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><p class="nav navbar-text">Logged as <%= current_user.email %></p></li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Dropdown <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><%= link_to "Profile", profile_path(current_user.profile) %></li>
                <li><%= link_to "Edit profile", edit_profile_path(current_user.profile) %></li>
                <li class="divider"></li>
                <li><%= link_to "Sign Out", destroy_user_session_path, method:  :delete %></li>
              </ul>
            </li>
          </ul>
        </div>
      </div>
    </nav>
<% end %>
<div class="container">
  <%= yield %>
</div>

</body>
</html>
