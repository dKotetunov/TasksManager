<div class='row'>
  <div class='col-lg-6'>
    <%= semantic_form_for [comment.project, comment.task, comment] do |f| %>
      <%= f.inputs do %>
        <%= f.input :text, input_html: {class: 'autogrow', rows: 10, cols: 20, maxlength: 100} %>
      <% end %>
      <%= f.actions do %>
        <%= f.action :submit, as: :button, button_html: {class: "btn btn-primary"} %>
        <%= f.action :cancel, as: :link, button_html: {class: "btn btn-default"} %>
      <% end %>
    <% end %>
  </div>
</div>
