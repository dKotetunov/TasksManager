<h1>Listing projects</h1>
<table class="table table-striped">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @projects.each do |project| %>
      <tr>
        <td><%= project.name %></td>
        <td><%= project.description %></td>
        <td><%= link_to 'Show', projects_path(project) %></td>
        <td><%= link_to 'Edit', edit_project_path(project), :class => 'btn btn-mini' %></td>
        <td><%= link_to 'Destroy', project_path(project),
                        method: :delete,
                        data: { confirm: 'Are you sure?'}, :class => 'btn btn-mini btn-danger'  %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<%= link_to 'New project', new_project_path, :class => 'btn btn-primary' %>