<div class='row'>
  <div class='col-lg-6'>
    <%= semantic_form_for moderator, url: moderator.persisted? ? moderator_path : moderators_path  do |f| %>
        <%= f.inputs do %>
            <%= f.input :email %>
            <%= f.input :password %>
            <%= f.semantic_fields_for :profile do |profile| %>
                <%= profile.input :first_name  %>
            <% end %>
        <% end %>
        <%= f.actions do %>
            <%= f.action :submit, :as => :button, button_html: { class: "btn btn-primary" } %>
            <%= f.action :cancel, :as => :link, button_html: { class: "btn btn-default" } %>
        <% end %>
    <% end %>
  </div>
</div>
