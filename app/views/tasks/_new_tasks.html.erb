<div id="new_tasks">
  <div class="panel panel-primary">
    <div class="panel-heading">
      New
      <% if can? :create, Task %>
        <%= link_to new_project_task_path, class: 'inverse-link pull-right' do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
        <% end %>
      <% end %>
    </div>
    <div class="panel-body">
      <% tasks.each do |task| %>
          <ul class="list-group">
            <li class="list-group-item">
              <%= link_to task.name, project_task_path(@project,task) %>
              (<%= link_to (task.user.initials), profile_path(task.user.profile) %>)
                <% if can? :start, task %>
              <%= link_to 'Start',project_task_start_path(@project,task), method: :patch, :class => 'btn btn-primary btn-xs pull-right' %>
                <% end %>
                <% if can? :destroy, Task %>
                <%= link_to project_task_path(@project,task),method: :delete, class: 'inverse-link pull-right', data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                <% end %>
              <% end %>
              <% if can? :update, Task %>
                <%= link_to edit_project_task_path(@project,task), class: 'inverse-link edit-link pull-right' do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
              <% end %>
            </li>
          </ul>
      <% end %>
    </div>
  </div>
</div>