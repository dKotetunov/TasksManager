<div id="new_tasks">
  <div class="panel panel-primary">
    <div class="panel-heading">
      New
      <%= link_to new_project_task_path, class: 'inverse-link pull-right' do %>
          <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
      <% end %>
    </div>
    <div class="panel-body">
      <% tasks.each do |task| %>
          <ul class="list-group">
            <li class="list-group-item">
              <%= task.name %>
              <%= link_to 'Start',project_task_start_path(@project,task), method: :patch, :class => 'btn btn-primary btn-xs pull-right' %>
              <%= link_to project_task_path(@project,task),method: :delete, class: 'inverse-link pull-right', data: { confirm: 'Are you sure?' } do %>
                  <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
              <% end %>
              <%= link_to edit_project_task_path(@project,task), class: 'inverse-link edit-link pull-right' do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
              <% end %>

            </li>
          </ul>
      <% end %>
    </div>
  </div>
</div>