<h1>Show task</h1>
<p>
  <strong>Task name:</strong>
  <%= @task.name %>
</p>
<p>
  <strong>Description:</strong>
  <%= @task.description %>
</p>
<p>
  <strong>Project:</strong>
  <%= @task.project.name %>
</p>
<% if @task.user %>
  <p>
    <strong>User:</strong>
    <%= @task.user.fullname %>
  </p>
<% end %>

<%= render partial: 'comments/comments', locals: {comment: @comment, comments: @comments} %>
<%= render partial: 'comments/form', locals: {comment: @comment} %>

