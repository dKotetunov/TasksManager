<div id="in_progress_tasks">
  <div class="panel panel-success">
    <div class="panel-heading">
      In progress
    </div>
    <div class="panel-body">
      <% tasks.each do |task| %>
          <ul class="list-group">
            <li class="list-group-item"><%= task.name %>
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="<%= task.progress %>" aria-valuemin="0" aria-valuemax="100" style="min-width: 2em;">
                  <%= task.progress %>%
                </div>
              </div>
              <% if can? :finish, task %>
                <%= link_to 'Finish', project_task_finish_path(@project,task), method: :patch, :class => 'btn btn-primary btn-xs pull-right' %>
              <% end %>
              <% if can? :update, Task %>
                <%= link_to edit_project_task_path(@project,task), class: 'inverse-link pull-right' do %>
                  <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                <% end %>
              <% end %>
            </li>
          </ul>
      <% end %>
    </div>
  </div>
</div>