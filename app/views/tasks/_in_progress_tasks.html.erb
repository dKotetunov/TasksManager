<div id="in_progress_tasks">
  <div class="panel panel-success">
    <div class="panel-heading">
      In progress
    </div>
    <div class="panel-body">
      <% tasks.each do |task| %>
          <ul class="list-group">
            <li class="list-group-item">
              <%= link_to task.name, project_task_path(@project,task) %>
              (<%= link_to (task.user.initials), profile_path(task.user.profile) %>)
              <div class="progress">
                <div class="progress-bar" role="progressbar" aria-valuenow="<%= task.progress %>" aria-valuemin="0" aria-valuemax="100" style="width: <%= task.progress %>%;">
                  <%= task.progress %>%
                </div>
              </div>
              <% if can? :finish, task %>
                <%= link_to 'Finish', project_task_finish_path(@project,task), method: :patch, :class => 'btn btn-primary btn-xs pull-right' %>
              <% end %>
            </li>
          </ul>
      <% end %>
    </div>
  </div>
</div>
