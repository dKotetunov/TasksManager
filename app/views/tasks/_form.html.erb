<div class='row'>
  <div class='col-lg-6'>
    <%= semantic_form_for [project,task] do |f| %>
        <%= f.inputs do %>
            <%= f.input :name %>
            <%= f.input :description %>
            <%= f.input :hours %>
            <%= f.input :user, :as => :select, :collection => User.simple.map{|u| [u.fullname, u.id]} %>
        <% end %>
        <%= f.actions do %>
            <%= f.action :submit, :as => :button, button_html: { class: "btn btn-primary" } %>
            <%= f.action :cancel, :as => :link, button_html: { class: "btn btn-default" } %>
        <% end %>
    <% end %>
  </div>
</div>
